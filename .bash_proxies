# Proxies

alias proxify=Proxify

function Proxify()
{
	sshport=8080
	sshalias="$1"
	if [ -z "$sshalias" ]; then
		echo "Alias needed"
		exit;
	fi;
	if [ ! -z "$2" ]; then
		sshport="$2"
	fi;	
    process_pid=$(ps aux | grep -i "$sshalias" | grep -v grep | awk {'print $2'})
    if [ "$process_pid" == "" ]; then
    	ssh -D 0.0.0.0:"$sshport" -f -C -q -N "$sshalias"
		process_pid=$(ps aux | grep -i "$sshalias" | grep -v grep | awk {'print $2'})
		echo "Proxy running at 0.0.0.0:"$sshport" with pid: $process_pid";
    else 
		echo "Proxy running at 0.0.0.0:"$sshport" with pid: $process_pid";
		read -p "Kill? [y/n]: " -n 1 -r
		echo
		if [[ $REPLY =~ ^[Yy]$ ]]; then
			kill $process_pid;
		    echo "Proxy running at 0.0.0.0:"$sshport" with pid: $process_pid was successfully killed";
    	fi;
    fi;
}
